<link rel='stylesheet' href='/Content/list.css' />
<!--List a Survey form with the CRUD functionality display-->
<html>
<%- include ../partials/header.ejs %>
    <%- include ../partials/main_nav.ejs %>
        <main class="jumbotron fluid" style = "background-color:#FFEBCD;">
            <h1 class="display-4">List of Surveys</h1>
            <br>
            
            <a href="/survey-list/add" class="btn btn-warning" style = "position:relative; left:45%; top:2px;" role="button">
            <i class="fas fa-plus" ></i> Add a survey</a>
            <br>
            <table class="table table-hover">
            <br>
                <thead>
                    <tr>
                        <th scope="col">Title of Survey</th>
                        <th scope="col">Date Created</th>
                        <th scope="col">Expiry Date</th>
                        <th scope="col">Type of Survey</th>
                        <th scope="col">Sample Questions</th>
                        <th scope="col">Edit Record</th>
                        <th scope="col">Delete Record</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                            <% for(let count=0; count<surveyList.length; count++){%>
                            <td><%= surveyList[count].name %></td>
                            <td><%= surveyList[count].created %></td>
                            <td><%= surveyList[count].expiry %></td>
                            <td><%= surveyList[count].type %></td>
                            <td><%= surveyList[count].questions %></td>                
                            <td>
                                <a href="/survey-list/edit/<%= surveyList[count]._id %>" class="btn btn-outline-success">
                                 Edit</a>
                            </td>
                            <td>
                                <a href="/survey-list/delete/<%= surveyList[count]._id %>" class="btn btn-outline-danger">
                               Delete</a>
                            </td>
                        </tr>
                        <%}%>
                </tbody>
            </table>
             <br>
        <br>
        <br>
        </main>
       
        <%- include ../partials/bottom_nav.ejs %>
            <%- include ../partials/footer.ejs %>
            </html>