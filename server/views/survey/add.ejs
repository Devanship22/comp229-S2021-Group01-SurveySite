<link rel='stylesheet' href='/Content/list.css' />
<!--Adding a new Survey form-->
<html>
<%- include ../partials/header.ejs %>
    <%- include ../partials/main_nav.ejs %>
        <main class="jumbotron fluid" style = "background-color:#FFEBCD;">
          <form method="POST" action="/survey-list/add">
            <h1 class="display-4">Add a Survey</h1>
                 <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputName">Survey name</label>
                <input name="name" type="text" class="form-control" id="inputName">
            </div>
            <div class="form-group col-md-6">
                <label for="inputType">Survey Type</label>
                 <select class="form-control" id="type" name="type">
                   <option>Agree/Disagree</option>
                <option>Short Answer</option>
            </select>
            </div>
             <div class="form-group col-md-6">
                <label for="inputCrDate">Current Date</label>
                <input name="currentdate" type="date" class="form-control" id="inputCrDate">
            </div>
            <div class="form-group col-md-6">
                <label for="inputExDate">Expiry Date</label>
                <input name="expirydate" type="date" class="form-control" id="inputExDate">
            </div>
             <div class="form-group col-md-12">
                <label for="inputQuestion" > Sample Questions</label>
                <textarea name="questions" type="string" class="form-control" id="inputQuestion"></textarea>
            </div>
                 
        </div>
        <div style = "position:relative; left:45%; top:2px;">
        <button type="submit" class="btn btn-outline-info">Add</button>
         <a href="/survey-list" class="btn btn-outline-danger">Cancel</a>
         </div>
    </form>
     <br>
        <br>
        <br>
        </main>
       
        <%- include ../partials/bottom_nav.ejs %>
            <%- include ../partials/footer.ejs %>
            </html>